# Binary files (generated index files use LFS if available)
*.idx filter=lfs diff=lfs merge=lfs -text
*.db filter=lfs diff=lfs merge=lfs -text

# PDFs are binary but small enough without LFS
*.pdf binary

# Ensure consistent line endings
*.py text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.json text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows-specific
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary

